@{
    ViewData["Title"] = "Employee";
}
@model IEnumerable<Employee>



<div class="">
    <h2>Data Employee</h2>
    <a asp-area="" asp-controller="Home" asp-action="AddEmploye" class="btn btn-success button-add ">Add Employee</a>
    <table class="table table-striped table-bordered table-style">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kode Karyawan</th>
                <th scope="col">Nama Karyawan</th>
                <th scope="col">jenis Kelamin</th>
                <th scope="col">level karyawan</th>
                <th scope="col">email</th>
                <th scope="col">alamat</th>
                <th scope="col">no_hp</th>
                <th scope="col">keterangan</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.KodeKaryawan</td>
                    <td>@item.NamaKaryawan</td>
                    <td>@item.JenisKelamin</td>
                    <td>@item.LevelKaryawan</td>
                    <td>@item.Email</td>
                    <td>@item.Alamat</td>
                    <td>@item.Telepon</td>
                    <td>@item.Keterangan</td>
                    <td class="button-edit">
                        <a asp-controller="Home" asp-action="EditEmployee" asp-route-id="@item.Id"
                            class="btn btn-primary">Edit</a>
                        <form asp-controller="Home" asp-action="DeleteEmployee" asp-route-id="@item.Id" method="post"
                            style="display:inline;">
                            <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this employee?');">Hapus</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
