@{
    ViewData["Title"] = "Absensi Get";
}
@model IEnumerable<AbsensiKaryawan>


<div class="">
    <h2>Absensi</h2>
    <a asp-area="" asp-controller="Home" asp-action="AddAbsensi" class="btn btn-success button-add ">Absen</a>
    <table class="table table-striped table-bordered table-style">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kode Karyawan</th>
                <th scope="col">Nama Karyawan</th>
                <th scope="col">Tanggal Masuk</th>
                <th scope="col">Tanggal Keluar</th>
                <th scope="col">Jam Masuk</th>
                <th scope="col">Jam Keluar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.KodeKaryawan</td>
                    <td>@item.NamaKaryawan</td>
                    <td>@item.TglMasuk</td>
                    <td>@item.TglKeluar</td>
                    <td>@item.JamMasuk</td>
                    <td>@item.JamKeluar</td>
                    <td class="button-edit">
                        <form asp-controller="Home" asp-action="DeleteAbsensi" asp-route-id="@item.Id" method="post"
                            style="display:inline;">
                            <button type="submit" class="btn btn-danger button-submit"
                                onclick="return confirm('Are you sure you want to delete this employee?');">Hapus</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>