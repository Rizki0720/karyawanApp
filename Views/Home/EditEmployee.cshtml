@model karyawanApp.Models.Employee
@{
    ViewData["Title"] = "EditEmployee";
}

<div class="heading-text">
    <h1>@ViewData["Title"]</h1>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Employee"> <-- Back</a>
</div>

<div class="container">
    <form asp-action="EditEmployee" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="section-form">
            <div class="form-group">
                <label asp-for="KodeKaryawan" class="control-label"></label>
                <input asp-for="KodeKaryawan" class="form-control" />
                <span asp-validation-for="KodeKaryawan" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="NamaKaryawan" class="control-label"></label>
                <input asp-for="NamaKaryawan" class="form-control" />
                <span asp-validation-for="NamaKaryawan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JenisKelamin" class="control-label"></label>
                <input asp-for="JenisKelamin" class="form-control" />
                <span asp-validation-for="JenisKelamin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelKaryawan" class="control-label"></label>
                <input asp-for="LevelKaryawan" class="form-control" />
                <span asp-validation-for="LevelKaryawan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alamat" class="control-label"></label>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telepon" class="control-label"></label>
                <input asp-for="Telepon" class="form-control" />
                <span asp-validation-for="Telepon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keterangan" class="control-label"></label>
                <input asp-for="Keterangan" class="form-control" />
                <span asp-validation-for="Keterangan" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Edit Employee" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>